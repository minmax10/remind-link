# 데이터베이스
# SQLite 사용 (개발용)
DATABASE_URL=sqlite:///./remindlink.db

# PostgreSQL 사용 (프로덕션)
# DATABASE_URL=postgresql://user:password@localhost:5432/remindlink

# JWT 인증
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (AI 분류용)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude API (선택사항, OpenAI 대신 사용 가능)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Twitter API (쓰레드 연동용)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:8000/api/integrations/threads/callback

# Instagram (웹 스크래핑 사용 시, 선택사항)
# INSTAGRAM_USERNAME=your-instagram-username
# INSTAGRAM_PASSWORD=your-instagram-password

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
